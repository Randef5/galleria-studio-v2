generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mockup {
  id             String   @id @default(uuid())
  userId         String
  artworkUrl     String
  mockupUrl      String?
  width          Float
  height         Float
  unit           String   @default("in")
  frameStyle     String   @default("none")
  matOption      String   @default("none")
  matWidth       Float    @default(2)
  templateId     String?
  aiGenerated    Boolean  @default(false)
  aiPrompt       String?
  environmentDesc String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model SavedFrame {
  id            String   @id @default(uuid())
  userId        String
  name          String
  slug          String
  prompt        String
  style         String   @default("ai-generated")
  imageUrl      String
  thumbnailUrl  String?
  borderWidth   Int      @default(12)
  cornerStyle   String   @default("mitered")
  material      String?
  colorPrimary  String?
  colorSecondary String?
  isPublic      Boolean  @default(false)
  usageCount    Int      @default(0)
  tags          String[] @default([])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@index([isPublic])
  @@unique([userId, slug])
}

model SavedEnvironment {
  id            String   @id @default(uuid())
  userId        String
  name          String
  slug          String
  prompt        String
  category      String   @default("custom")
  imageUrl      String
  thumbnailUrl  String?
  wallColor     String?
  lighting      String?
  roomType      String?
  mood          String?
  isPublic      Boolean  @default(false)
  usageCount    Int      @default(0)
  tags          String[] @default([])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@index([isPublic])
  @@index([category])
  @@unique([userId, slug])
}

model UserCollection {
  id        String   @id @default(uuid())
  userId    String
  name      String
  type      String
  itemIds   String[] @default([])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, type])
}